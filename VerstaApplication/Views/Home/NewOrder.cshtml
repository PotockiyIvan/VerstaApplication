@model Order

<!DOCTYPE html>
<html lang="ru">
@await Html.PartialAsync("MetasPartial")
<body>
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Home" asp-action="NewOrder" method="post">
                <div class="modal-header">
                    <h4 class="modal-title">Добавить заказ</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="SenderCity"></label>
                        <input asp-for="SenderCity" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="SenderAddress"></label>
                        <input asp-for="SenderAddress" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="RecipientCity"></label>
                        <input asp-for="RecipientCity" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="RecipientAddress"></label>
                        <input asp-for="RecipientAddress" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="CargoWeight"></label>
                        <input asp-for="CargoWeight" class="form-control" required>
                    </div>
                    <div class="form-group">
                        <label asp-for="PickUpDate"></label>
                        <input asp-for="PickUpDate" class="form-control" required>
                    </div>
                </div>
                <div class="modal-footer">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-default" style="" data-dismiss="modal">Выйти</a>
                    <input type="submit" class="btn btn-success" style="background-color: #427b4f;" value="Добавить">
                </div>
            </form>
        </div>
    </div>
</body>
</html>